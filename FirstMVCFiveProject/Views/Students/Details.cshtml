@model FirstMVCFiveProject.Models.Student

@{
    ViewBag.Title = "Student Details";
}

<div class="card rounded shadow-sm">
    <div class="card-body">
        <h3 class="card-title">Student Details</h3>
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Roll No</dt>
            <dd class="col-sm-9">@Model.RollNo</dd>
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Age</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <div class="mt-3">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning rounded me-2" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary rounded" })
        </div>
    </div>
</div>
